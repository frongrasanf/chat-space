.chat-group-form
  %h1 新規チャットグループ
  = form_for(@chat_group, html: { id: "new_chat_group" }, remote: true) do |f|
    .chat-group-form__field
      .chat-group-form__field--left
        = f.label :name, "グループ名", class: "chat-group-form__label"
      .chat-group-form__field--right
        = f.text_field :name, class: "chat-group-form__input", placeholder: "グループ名を入力してください"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :user_ids, "チャットメンバーを追加", class: "chat-group-form__label"
      .chat-group-form__field--right
        = f.text_field :user_ids, class: "chat-group-form__input"
        = @users.each do |user|
          .chat-group-user.clearfix
            .chat-group-user__name
              = user.name
            .chat-group-user__btn
              = f.button "追加", class: "chat-group-user__btn--add"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :user_ids, "チャットメンバー", class: "chat-group-form__label"
      .chat-group-form__field--right
        .chat-group-user.clearfix
          .chat-group-user__name
            = current_user.name
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit "Save", class: "chat-group-form__action-btn"
