.chat-group-form__field.clearfix
  .chat-group-form__field--left
    = f.label :name, "グループ名", class: "chat-group-form__label"
  .chat-group-form__field--right
    = f.text_field :name, class: "chat-group-form__input", placeholder: "グループ名を入力してください"
.chat-group-form__field.clearfix
  .chat-group-form__field--left
    .chat-group-form__label チャットメンバーを追加
  .chat-group-form__field--right
    = f.text_field :group_users, value: "", type: "text", placeholder: "追加したいユーザー名を入力してください", id: "keyword", class: "chat-group-form__input"
  #user_info.chat-group-form__field--right
.chat-group-form__field.clearfix
  .chat-group-form__field--left
    .chat-group-form__label チャットメンバー
  #added_users.chat-group-form__field--right
    = f.hidden_field :user_ids, name: "chat_group[user_ids][]", value: current_user.id
    .chat-group-user
      .chat-group-user__name
        = current_user.name
    - if @listed_users.present?
      - @listed_users.each do |user|
        .chat-group-user
          .chat-group-user__name
            = user.name
          .chat-group-user__btn
            .chat-group-user__btn--remove 削除
          = f.hidden_field :user_ids, id: "hidden_id", name: "chat_group[user_ids][]", value: user.id
.chat-group-form__field.clearfix
  .chat-group-form__field--left
  .chat-group-form__field--right
    = f.submit "Save", class: "chat-group-form__action-btn"

